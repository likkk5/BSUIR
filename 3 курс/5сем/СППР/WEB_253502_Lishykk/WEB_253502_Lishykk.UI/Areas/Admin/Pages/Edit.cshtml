@page
@model WEB_253502_Lishykk.UI.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.Id" />
            <div class="form-group">
                <label asp-for="Car.Name" class="control-label"></label>
                <input asp-for="Car.Name" class="form-control" />
                <span asp-validation-for="Car.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Description" class="control-label"></label>
                <input asp-for="Car.Description" class="form-control" />
                <span asp-validation-for="Car.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Price" class="control-label"></label>
                <input asp-for="Car.Price" class="form-control" />
                <span asp-validation-for="Car.Price" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="Car.ImagePath" class="control-label"></label>
                <input asp-for="Car.ImagePath" class="form-control" />
                <span asp-validation-for="Car.ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.ImageMimeType" class="control-label"></label>
                <input asp-for="Car.ImageMimeType" class="form-control" />
                <span asp-validation-for="Car.ImageMimeType" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Car.CategoryId" class="control-label"></label>
                <select asp-for="Car.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Car.CategoryId" class="text-danger"></span>
            </div>
            <div>
                <label>Текущее изображение:</label>
                @if (!string.IsNullOrEmpty(Model.Car.ImagePath))
                {
                    // Проверка на то, является ли путь относительным или полным URL
                    string imageUrl;
                    if (Model.Car.ImagePath.StartsWith("http://") || Model.Car.ImagePath.StartsWith("https://"))
                    {
                        // Если это полный URL, используем его как есть
                        imageUrl = Model.Car.ImagePath;
                    }
                    else
                    {
                        // Если это относительный путь, добавляем базовый путь
                        imageUrl = Url.Content("~" + Model.Car.ImagePath);
                    }

                    <img src="@imageUrl" alt="Текущее изображение" style="max-width: 200px; max-height: 200px;" />
                    <p>Путь к изображению: @imageUrl</p> <!-- Для отладки -->
                }
                else
                {
                    <p>Изображение не загружено</p>
                }
            </div>

            <div class="form-group">
                <label asp-for="ImageFile" class="control-label">Upload New Image</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
                <small class="form-text text-muted">Если вы хотите изменить текущее изображение, выберите новый файл.</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
