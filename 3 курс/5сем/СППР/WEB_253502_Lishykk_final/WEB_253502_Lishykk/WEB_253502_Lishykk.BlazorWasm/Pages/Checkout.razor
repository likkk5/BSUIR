@page "/checkout"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using WEB_253502_Lishykk.BlazorWasm.Models
@inject CartService CartService
@inject NavigationManager Navigation

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Список товаров -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-light">
                    <h3 class="mb-0">Ваш заказ</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var item in CartService.Items.Values)
                        {
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <span>@item.Item.Name (x@(item.Count))</span>
                                    <span>@((item.Item.Price * item.Count).ToString("N2")) руб. </span>
                                </div>
                            </li>
                        }
                        <li class="list-group-item list-group-item-secondary fw-bold">
                            <div class="d-flex justify-content-between">
                                <span>Итого:</span>
                                <span>@CartService.GetTotalPrice().ToString("N2") руб.</span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Кнопка оформления -->
            <button class="btn btn-primary w-100 py-3 mb-4"
                    @onclick="PlaceOrder"
                    disabled="@(CartService.Items.Count == 0 || _isProcessing)">
                @if (_isProcessing)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                Подтвердить заказ
            </button>

            <!-- Блок подтверждения -->
            @if (_orderPlaced)
            {
                <div class="alert alert-success text-center animate__animated animate__fadeIn">
                    <i class="fas fa-check-circle fa-2x mb-3"></i>
                    <h4 class="alert-heading">Заказ оформлен!</h4>
                    <p>Спасибо за ваш заказ</p>
                    <a href="/cars" class="btn btn-outline-success mt-2">
                        Вернуться в магазин
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private bool _isProcessing = false;
    private bool _orderPlaced = false;

    protected override async Task OnInitializedAsync()
    {
        await CartService.InitializeAsync();
        if (CartService.Items.Count == 0)
        {
            Navigation.NavigateTo("/cart");
        }
    }

    private async Task PlaceOrder()
    {
        _isProcessing = true;

        try
        {
            // Имитация обработки заказа
            await Task.Delay(1000);

            _orderPlaced = true;
            await CartService.ClearCart();
        }
        finally
        {
            _isProcessing = false;
        }
    }
}