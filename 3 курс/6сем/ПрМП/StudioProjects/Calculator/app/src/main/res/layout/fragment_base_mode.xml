<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BaseModeFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <Button android:id="@+id/btn_ac" style="@style/ButtonFunction" android:text="AC"/>
            <Button android:id="@+id/btn_parenthesis_l" style="@style/ButtonFunction" android:text="("/>
            <Button android:id="@+id/btn_parenthesis_r" style="@style/ButtonFunction" android:text=")"/>
            <Button android:id="@+id/btn_division" style="@style/ButtonOperator" android:text="÷"/>
        </TableRow>

        <TableRow>
            <Button android:id="@+id/btn_7" style="@style/ButtonBase" android:text="7"/>
            <Button android:id="@+id/btn_8" style="@style/ButtonBase" android:text="8"/>
            <Button android:id="@+id/btn_9" style="@style/ButtonBase" android:text="9"/>
            <Button android:id="@+id/btn_multiply" style="@style/ButtonOperator" android:text="×"/>
        </TableRow>

        <TableRow>
            <Button android:id="@+id/btn_4" style="@style/ButtonBase" android:text="4"/>
            <Button android:id="@+id/btn_5" style="@style/ButtonBase" android:text="5"/>
            <Button android:id="@+id/btn_6" style="@style/ButtonBase" android:text="6"/>
            <Button android:id="@+id/btn_minus" style="@style/ButtonOperator" android:text="-"/>
        </TableRow>

        <TableRow>
            <Button android:id="@+id/btn_1" style="@style/ButtonBase" android:text="1"/>
            <Button android:id="@+id/btn_2" style="@style/ButtonBase" android:text="2"/>
            <Button android:id="@+id/btn_3" style="@style/ButtonBase" android:text="3"/>
            <Button android:id="@+id/btn_plus" style="@style/ButtonOperator" android:text="+"/>
        </TableRow>

        <TableRow>
            <Button android:id="@+id/btn_back" style="@style/ButtonFunction" android:text="⌫"/>
            <Button android:id="@+id/btn_0" style="@style/ButtonBase" android:text="0"/>
            <Button android:id="@+id/btn_dot" style="@style/ButtonBase" android:text="."/>
            <Button android:id="@+id/btn_equal" style="@style/ButtonFunction" android:text="="/>
        </TableRow>

    </TableLayout>


</FrameLayout>