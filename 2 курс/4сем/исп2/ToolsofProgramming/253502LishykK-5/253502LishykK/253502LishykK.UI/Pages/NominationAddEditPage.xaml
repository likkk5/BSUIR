<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_253502LishykK.UI.Pages.NominationAddEditPage"
             xmlns:viewmodels="clr-namespace:_253502LishykK.UI.ViewModels"
             xmlns:pages="clr-namespace:_253502LishykK.UI.Pages"
             xmlns:valueconverter="clr-namespace:_253502LishykK.UI.ValueConverter"
             x:DataType="viewmodels:NominationAddEditPageViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="NominationAddEditPage">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Loaded" Command="{Binding UpdateGroupListCommand }"/>
    </ContentPage.Behaviors>
    <ScrollView> 
    <StackLayout>
        <!-- Выбор номинации -->
        <Picker ItemsSource="{Binding Nominations}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedNomination}"
                    Title="Select Nomination" />

        <Entry Placeholder="Имя" Text="{Binding Name}" />

        <!-- Кнопка для сохранения -->
        <Button Text="Save Nomination" Command="{Binding SaveCommand}" />


    </StackLayout>
    </ScrollView>
</ContentPage>
